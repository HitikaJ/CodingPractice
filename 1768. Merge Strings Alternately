class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        int n1=word1.size();
        int n2=word2.size();
        
        string word ="";
        
        for(int i=0;i<n1||i<n2;i++){
            
            if(i<n1){
            word+=word1[i];
                
            }
            if(i<n2){
            word+=word2[i];
            }             
            }        
        return word;   
        
        
    }
};
